<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../img/icon.png" rel="shortcut icon" type="image/x-icon">
    <link href="../css/css.css" rel="stylesheet" type="text/css">
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../js/js.js"></script>
    <title>NICHOS</title>

</head>
<body>
    <div id="app">
        <header>
            <img src="../img/logo.png" width="200" alt="Logo da Empresa">
            <h2>NICHOS</h2>
        </header>

        <footer>
            <span id="dateTime"></span>
        </footer>

        <main>
            <br/>
            <input 
                type="text" 
                id="Pesquisar" 
                placeholder="üîé Pesquisar..." 
                v-model="searchTerm" 
                @keyup="Pesquisar"
            >
            <button @click="NOVON">NOVO ‚ûï</button>
            <a href="javascript:window.history.back()">
                <button>VOLTAR üîô</button>
            </a>

            <table>
                <thead>
                    <tr>
                        <th>NICHOS</th>
                        <th>A√á√ïES</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in filteredNichos" :key="item.id" :data-id="item.id">
                        <td>
                            <input v-model="item.nichos">
                        </td>
                        <td>
                            <span class="action-btn save" @click="ATUALIZARN(item)">Gravar ‚úÖ</span>
                            <span class="action-btn delete" @click="EXCLUIRN(item)">Excluir ‚ùå</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </main>

        <transition name="fade">
            <div v-if="loading" class="loader-overlay">
                <img src="../img/loading.gif" alt="Carregando...">
            </div>
        </transition>
    </div>

    <script>
        const { createApp, ref, computed, onMounted } = Vue;

        createApp({
            setup() {
                const nichos = ref([]);
                const searchTerm = ref('');
                const loading = ref(false);

                // Fun√ß√£o para buscar dados
                async function fetchDataN() {
                    try {
                        const data = await fetchAPI(`select * from nichos`, loading);
                        nichos.value = data;
                    } catch (error) {
                        showError('Erro ao buscar dados.');
                    }
                }

                // Fun√ß√£o para adicionar novo nicho
                function NOVON() {
                    nichos.value.unshift({ id: '', nichos: '' });
                }

                // Fun√ß√£o para salvar novo nicho
                async function SALVARN(item) {
                    try {
                        const sqlQuery = `insert into nichos (nichos) values ('${item.nichos}')`;
                        await fetchAPI(sqlQuery, loading);
                        showSuccess('Dados salvos com sucesso!');
                        await fetchDataN();
                    } catch (error) {
                        showError('Erro ao salvar dados.');
                    }
                }

                // Fun√ß√£o para atualizar nicho
                async function ATUALIZARN(item) {
                    if (!item.id) {
                        await SALVARN(item);
                        return;
                    }
                    try {
                        const sqlQuery = `update nichos set nichos='${item.nichos}' where id=${item.id}`;
                        await fetchAPI(sqlQuery, loading);
                        showSuccess('Dados atualizados com sucesso!');
                        await fetchDataN();
                    } catch (error) {
                        showError('Erro ao atualizar dados.');
                    }
                }

                // Fun√ß√£o para excluir nicho
                async function EXCLUIRN(item) {
                    if (!item.id) {
                        showWarning('N√£o √© poss√≠vel excluir uma linha sem ID.');
                        return;
                    }

                    const confirmed = await confirmAction('Tem certeza de que deseja excluir esta linha?');
                    if (confirmed) {
                        try {
                            const sqlQuery = `delete from nichos where id=${item.id}`;
                            await fetchAPI(sqlQuery, loading);
                            showSuccess('Dados exclu√≠dos com sucesso!');
                            await fetchDataN();
                        } catch (error) {
                            showError('Erro ao excluir dados.');
                        }
                    }
                }

                // Fun√ß√£o de pesquisa
                function Pesquisar() {
                    // A filtragem ser√° feita pelo computed property
                }

                // Computed property para filtrar nichos
                const filteredNichos = computed(() => {
                    const term = searchTerm.value.toLowerCase();
                    return nichos.value.filter(item => 
                        item.nichos.toLowerCase().includes(term)
                    );
                });

                // Carregar dados ao montar o componente
                onMounted(() => {
                    fetchDataN();
                });

                return {
                    nichos,
                    searchTerm,
                    loading,
                    NOVON,
                    ATUALIZARN,
                    EXCLUIRN,
                    Pesquisar,
                    filteredNichos
                };
            }
        }).mount('#app');
    </script>
</body>
</html>